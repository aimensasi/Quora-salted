<!-- Button trigger modal -->

<div class="dropdown">
  <button class="btn" type="button" id="menu-option" 
    data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
      <i class="fa fa-caret-down fa-lg" aria-hidden="true"></i>
  </button>

  <div class="dropdown-menu" aria-labelledby="menu-option">
    <button class="dropdown-item " id="edit" 
    data-target="#edit_question" >Edit</button>

    <button class="dropdown-item" id="delete" 
      data_parent="<%= question.id %>" data_name="questions">
      Delete
    </button>
  </div>
</div>

<!-- Modal -->
<div class="modal fade" id="edit_question" tabindex="-1" role="dialog" aria-labelledby="title" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <%= erb :'question/partials/_form', :layout => false, :locals => {:question => question} %>
  </div><!-- /.modal-dialog -->
</div><!-- /.modal -->